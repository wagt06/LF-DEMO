<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LIP.LoginPage">
    <ContentPage.Content >
        <StackLayout Padding="10" Margin="0,60,0,0">
            <!--<Image  WidthRequest="100" Source="Cuaderno.jpg"></Image>-->
            <Label FontSize="25" Text="LIP" HorizontalOptions="CenterAndExpand" />
            <Label Text="Levantado de Inventario Paisas " HorizontalOptions="CenterAndExpand" />
            <Entry Margin="0,60,0,0" HorizontalTextAlignment="Center" Text="" Placeholder="Ingrese credenciales" BackgroundColor="LightGray" TextColor="Black"></Entry>
            <Button BackgroundColor="Green" Margin="0,20,0,0" Text="Iniciar Session "  WidthRequest="100" HeightRequest="60"></Button>
            <Label   HorizontalTextAlignment="End" Text="Se me olvido la contraseña"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>